{
  "name": "wallace-files",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "prisma generate && next build",
    "vercel-build": "prisma migrate deploy && prisma generate && next build",
    "dev": "next dev --turbo",
    "start": "next start",
    "preview": "bun run build && bun run start",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "ci": "bun run format:check && bun run lint && bun run typecheck && bun run test",
    "turbo:build": "turbo build",
    "turbo:dev": "turbo dev",
    "turbo:test": "turbo test",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "bun run prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "vercel:env": "vercel env pull .env.local",
    "setup": "./scripts/setup-modern.sh",
    "mcp:setup": "./scripts/setup-mcp.sh",
    "mcp:prisma": "npx -y prisma platform mcp --early-access",
    "mcp:browser": "npx -y @browsermcp/mcp",
    "mcp:test": "echo 'Testing MCP servers...' && npm run mcp:prisma --version && npm run mcp:browser --version",
    "mcp:install": "echo 'Installing MCP dependencies...' && npm install -g @browsermcp/mcp"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.20.0",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.10.0",
    "@prisma/client": "^6.5.0",
    "@sentry/nextjs": "^8.42.0",
    "@t3-oss/env-nextjs": "^0.12.0",
    "@tanstack/react-query": "^5.69.0",
    "@trpc/client": "^11.0.0",
    "@trpc/react-query": "^11.0.0",
    "@trpc/server": "^11.0.0",
    "@vercel/analytics": "^1.4.1",
    "@vercel/speed-insights": "^1.1.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.0.0",
    "next": "^15.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "server-only": "^0.0.1",
    "superjson": "^2.2.1",
    "tailwind-merge": "^3.3.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/postcss": "^4.0.15",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^20.14.10",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "jsdom": "^25.0.1",
    "postcss": "^8.5.3",
    "prisma": "^6.5.0",
    "tailwindcss": "^4.0.15",
    "turbo": "^2.3.3",
    "typescript": "^5.8.2",
    "vitest": "^2.1.8"
  },
  "ct3aMetadata": {
    "initVersion": "7.39.3"
  },
  "packageManager": "bun@1.1.0"
}
